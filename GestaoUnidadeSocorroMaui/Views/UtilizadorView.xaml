<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GestaoUnidadeSocorroMaui.Views.UtilizadorView"
             Title="UtilizadorView">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Bombeiro.Nome}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label  
            Text="{Binding Bombeiro.Email}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Bombeiro.Morada}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label  
            Text="{Binding Bombeiro.Categoria}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />




    </VerticalStackLayout>
</ContentPage>